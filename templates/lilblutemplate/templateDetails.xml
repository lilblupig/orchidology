<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
	<name>lilblutemplate</name>
	<version>1.0</version>
	<creationDate>Spring 2025</creationDate>
	<author>Lilblupig</author>
	<authorEmail>lilblupig@gmail.com</authorEmail>
	<copyright>(C) 2025 Lilblupig</copyright>
	<description>TPL_lilblutemplate_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	<scriptfile>script.php</scriptfile>
	<files>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
		<folder>fonts</folder>
	</files>
	<media destination="templates/site/lilblutemplate" folder="media">
		<folder>js</folder>
		<folder>css</folder>
		<folder>scss</folder>
		<folder>images</folder>
	</media>
	<positions>
		<position>header</position>
		<position>footer</position>
		<position>sidebar</position>
		<position>breadcrumbs</position>
		<position>menu</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_lilblutemplate.ini</language>
		<language tag="en-GB">en-GB/tpl_lilblutemplate.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
					name="testparam"
					type="radio"
					label="TPL_lilblutemplate_TEST_LABEL"
					default="1"
					layout="joomla.form.field.radio.switcher"
					filter="boolean"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
